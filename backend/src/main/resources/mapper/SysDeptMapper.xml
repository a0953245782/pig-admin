<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenym.pig.mapper.SysDeptMapper">


	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chenym.pig.model.SysDept">
		<id column="dept_id" property="deptId"/>
		<result column="name" property="name"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="del_flag" property="delFlag"/>
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		dept_id AS deptId, parent_id AS parentId, name, sort, create_time AS createTime, update_time AS updateTime, del_flag AS delFlag
	</sql>

	<!--关联查询部门列表-->
	<select id="listDepts" resultType="com.chenym.pig.model.SysDept">
		SELECT
		t.*
		FROM
		sys_dept t
		LEFT JOIN sys_dept_relation dr ON t.dept_id = dr.descendant
		WHERE dr.ancestor = 0
	</select>
</mapper>